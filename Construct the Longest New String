class Solution {
public:
    int longestString(int x, int y, int z) {
        int ans=0;
        if(x>y){
            ans+=(2*y+1+z);
            return ans*2;
        }
        else if(x==y){
            ans+=(x+y+z);
            return ans*2;
        }
        else{
            ans+=(2*x+1+z);
            return ans*2;
        }
    }
};
